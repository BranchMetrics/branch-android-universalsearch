<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/branch_section_header_margin_horizontal"
    android:layout_marginRight="@dimen/branch_section_header_margin_horizontal"
    android:layout_marginTop="@dimen/branch_section_header_margin_top"
    android:layout_marginBottom="@dimen/branch_section_header_margin_bottom">

    <View
        style="?attr/branchSectionHeaderLine"
        android:id="@+id/branch_header_line"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/branch_spacing_extra_small"
        android:layout_marginEnd="@dimen/branch_spacing_medium"
        android:layout_marginBottom="@dimen/branch_spacing_extra_small" />

    <TextView
        style="?attr/branchSectionHeaderTitle"
        android:id="@+id/branch_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Suggested apps" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <TextView
        style="?attr/branchSectionHeaderToggle"
        android:id="@+id/branch_header_toggle"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="More" />

    <ImageView
        style="?attr/branchSectionHeaderToggleIcon"
        android:id="@+id/branch_header_toggle_icon"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/branch_ic_more_24dp" />
</LinearLayout>