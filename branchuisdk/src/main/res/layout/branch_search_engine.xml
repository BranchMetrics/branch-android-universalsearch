<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/branchSearchEngineContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        style="?attr/branchSearchEngineIcon"
        android:id="@+id/branch_autocomplete_footer_image"
        android:layout_marginStart="@dimen/branch_search_engine_inner_spacing_start"
        android:layout_marginEnd="@dimen/branch_search_engine_inner_spacing_middle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/branch_autocomplete_footer_text" />

    <TextView
        style="?attr/branchSearchEngineLabel"
        android:id="@+id/branch_autocomplete_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/branch_search_engine_inner_spacing_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/branch_autocomplete_footer_image"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>