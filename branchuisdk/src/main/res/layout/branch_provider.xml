<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/branch_provider_divider"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="@drawable/branch_provider_background"
        android:elevation="@dimen/branch_provider_elevation"
        android:paddingLeft="@dimen/branch_provider_padding_horizontal"
        android:paddingRight="@dimen/branch_provider_padding_horizontal"
        android:paddingTop="@dimen/branch_provider_padding_vertical"
        android:paddingBottom="@dimen/branch_provider_padding_vertical" />

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/branch_provider_divider"/>

</LinearLayout>