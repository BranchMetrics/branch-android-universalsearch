<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.RecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:background="@drawable/branch_section_background"
    android:elevation="@dimen/branch_section_elevation"
    android:paddingLeft="@dimen/branch_section_padding_horizontal"
    android:paddingRight="@dimen/branch_section_padding_horizontal"
    android:paddingTop="@dimen/branch_section_padding_vertical"
    android:paddingBottom="@dimen/branch_section_padding_vertical"
    android:layoutAnimation="@anim/branch_layout_fall_down" />